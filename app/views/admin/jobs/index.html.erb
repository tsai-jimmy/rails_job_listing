<div class="pull-right">
  <%= link_to("Add a job", new_admin_job_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-bordered">
  <thead>
    <tr>
      <td>status</td>
      <td>职缺</td>
      <td></td>
      <td>开缺人</td>
      <td>开缺时间</td>
    </tr>
  </thead>
  <tbody>
  	<% @jobs.each do |job| %>
	    <tr>
	      <td>
	      	<%= render_job_status(job) %>
	      </td>
	      <td>
	        <%= link_to(job.title, admin_job_path(job)) %>
	      </td>
	      <td>
	        <%= link_to("Edit", edit_admin_job_path(job),class: "btn btn-sm btn-default") %> 
	        <%= link_to("Destroy", admin_job_path(job),class: "btn btn-sm btn-danger", :method => :delete, :data => { :confirm => "Are you sure?" }) %>
	        
	        <% if job.is_hidden %>
		    	<%= link_to("Publish", publish_admin_job_path(job) , :method => :patch, :class => "btn btn-xs btn-success") %>
	  		<% else %>
			    <%= link_to("Hide", hide_admin_job_path(job) , :method => :patch, :class => "btn btn-xs btn-default") %>
		  	<% end %>
	      </td>
	      <td>
	        <%= job.user.email %>
	      </td>
	      <td>
	        <%= job.created_at %>
	      </td>
	    </tr>
  	<% end %>
  </tbody>
</table>