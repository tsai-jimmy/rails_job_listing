<%= simple_form_for @job do |f| %>

<% if @job.errors.any? %>
<ul>
	<% @job.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
</ul>
<% end %>
<div class="form-group">
    <%= f.input :title, label: '标题', input_html: { class: "form-control"} %>
    <%= f.input :description,label: '描述', input_html: { class: "form-control"} %>
    <%= f.input :wage_lower_bound, :label => "薪资下限" %>
	<%= f.input :wage_upper_bound, :label => "薪资上限" %>
	<%= f.input :contact_email %>
</div>

<%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
<% end %>

